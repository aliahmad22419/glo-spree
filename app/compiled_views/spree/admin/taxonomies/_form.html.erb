<div data-hook="admin_inside_taxonomy_form" class="form-group">
  <%= f.field_container :name, class: ['form-group'] do %>
    <%= f.label :name, Spree.t(:name) %> <span class="required">*</span>
    <%= f.text_field :name, class: 'form-control' %>
    <%= f.error_message_on :name, class: 'error-message' %>
  <% end %>
<%= f.label :slug, Spree.t(:slug) %>
           <%= f.text_field :slug, class: 'form-control' %><%= f.field_container :store_id, class: ['form-group'] do %>
  <%= f.label :name, Spree.t(:store) %> <span class="required">*</span>
  					<% if defined?(current_spree_client) && current_spree_client %>
						<%= f.collection_select(:store_id, current_spree_client.stores, :id, :name, { include_blank: Spree.t('match_choices.none') }, { class: 'select2' }) %>
					<% else %>
						<%= f.collection_select(:store_id, Spree::Store.all, :id, :name, { include_blank: Spree.t('match_choices.none') }, { class: 'select2' }) %>
          <% end %>

<% end %>
</div>

<section class="sign-up-section">
  <div class="sign-up-container">
    <h2 class="mb-2"><%= data&.title %></h2>
    <div class="signup-text pt-1">
      <p style="background-color: <%= data&.background_color%>;text-align: <%= data&.text_allignment%>;color: <%= data&.font_color%>"><%= data&.caption %></p>
    </div>
    <form class="sign-up-form">
      <div class="d-flex justify-content-center flex-column flex-md-row">
        <input class="form-control" name="email" id="mailchip-email" placeholder="Enter your email address" type="email">
        <button class="btn btn-primary submit" id="mailchip-submit-btn" type="submit"><%= data&.heading %></button>
      </div>
      <div class="email-error invalid-feedback">
        <div>Email address is invalid</div>
      </div>
    </form>
  </div>
</section>
